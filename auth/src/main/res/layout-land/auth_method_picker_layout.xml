<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center|bottom"
    android:orientation="horizontal">

    <include
        layout="@layout/include_auth_method_picker_logo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1.0">

            <TextView
              style="@style/FirebaseUI.AuthMethodPicker.ReauthReason"
              android:id="@+id/reauth_reason"
              android:textIsSelectable="true"/>

            <LinearLayout
              android:id="@+id/btn_holder"
              style="@style/FirebaseUI.AuthMethodPicker.ButtonHolder"
              android:layout_height="wrap_content"
              android:layout_below="@id/reauth_reason">

                <Button
                  android:id="@+id/email_provider"
                  style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
                  android:text="@string/sign_in_with_email"
                  android:visibility="gone"
                  tools:visibility="visible" />

            </LinearLayout>

    </RelativeLayout>

</LinearLayout>
